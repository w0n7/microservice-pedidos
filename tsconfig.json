{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2023"],

    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*", "server.ts"]
}